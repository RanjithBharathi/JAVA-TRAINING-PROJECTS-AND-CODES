public class Main {
    public static void main(String[] args) {
        int n = 1234;
        int t =n;
        int rem = 0;
        int sum = 0;

        while (n > 0) {
            rem = n % 10;     
            sum = sum * 10 + rem; 
            n = n / 10;        
        }

        System.out.println(sum); 
        if (sum==t){
            System.out.println("palindrome");
        }
        else{
            System.out.println("Not a palindrome");
        }
            
        
    }
}
